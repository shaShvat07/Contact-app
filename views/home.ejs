<html>
        <head>
                <title>
                    <%= title %>
                </title>
                <script
                src="https://kit.fontawesome.com/b0a88a3a0e.js"
                crossorigin="anonymous"
              ></script>
                <link rel="stylesheet" href="\css\home.css">
        </head>

        <body>
          
            <h1 id="heading"><i class="fa-solid fa-address-book fa-bounce fa-1xl"></i>  MY CONTACT LIST</h1> 
            
            <div>
                <ul>
                    <% for(i of contactArr) { %>
                        <li>
                            <p class="list-item"><div class="name"><%= i.name %></div> <div class="phone"><%= i.phone %> </div></p>
                            <a href="/delete-contacts/?phoneid=<%= i.phoneid %>"> <i class="fa-solid fa-xmark fa-lg"></i> DELETE</a>
                        </li>
                    <% } %>
                    <% for(i of contacts_list) { %>
                        <li>
                            <p class="list-item"><div class="name"><%= i.name %></div> <div class="phone"><%= i.phone %> </div></p>
                            <a href="/delete-contacts/?id=<%= i._id %>"> <i class="fa-solid fa-xmark fa-lg"></i> DELETE</a>
                        </li>
                    <% } %>
                </ul>
            </div>

<div class="former">
            <form action="/create-contacts" method="POST">
                <input class="form-name" type="text" name="name" placeholder="Enter Name" required>
                <input class="form-phone" type="text" name="phone" placeholder="Enter Phone Number" required>
                <button class="button" type="submit"> Add Contact</button>
            </form>
</div>

            <script type="text/javascript" src="/js/home.js"> </script>
        </body> 
</html>